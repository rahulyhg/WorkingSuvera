<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onload.AddReason">


    <TextView
        android:id="@+id/lblAddReasonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="@string/whyDrug"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtDrugReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAddReasonTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:hint="@string/hintReason"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/btnConfirmReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtDrugReason"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_navigate_next"
        android:contentDescription="@string/hintNext" />
</RelativeLayout>
